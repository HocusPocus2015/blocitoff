<h1><%= @list.title %></h1>
<div class="row">
  <div class="col-md-8">
    <% @list.list_items.each do |item| %>
    <div class="media" id="list_item<%= item.id %>">
      <div class="media-body">
        <h4 class="media-heading">
          <%= item.body %>
          <small>
            Time left to expiry: <%= (item.days_left) %>
          </small>
        </h4>
        
         <%= link_to " ", [@list, item], method: :delete, class: "glyphicon glyphicon-ok", remote: true %>
          <%= render "list_items/form" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>